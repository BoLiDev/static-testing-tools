{
  "name": "static-testing-tools",
  "private": true,
  "author": "Kent C. Dodds (http://kentcdodds.com/)",
  "license": "GPLv3",
  "scripts": {
    "build": "babel src --extensions .js,.jsx,.ts,.tsx --out-dir dist",
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --ignore-path .gitignore \"*/**.+(js|jsx|json|ts|tsx|html|css|sass|scss)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --check",
    "check-types": "tsc",
    "validate": "npm run check-types && npm run check-format && npm run lint && npm run format && npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.21.5",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
